{{!-- Displayed when user is taking a quiz --}}

<div class="container flex grid grid-row justify-evenly bg-gradient-to-r from-[#b2d1f7] via-[#66a5f2]/60 to-[#b2d1f7]  border-2 border-blue-500 rounded py-20 m-4 shadow-lg">

{{!-- Display quiz title, creator, body --}}
<div class="card single-quiz-padding text-center">
    <h1 id="quiz-title"  class="text-4xl text-center font-bold mb-4 underline">{{quiz.title}} </h1>
    <h4 class="text-center text-xl mb-6">Posted by {{quiz.user.username}}</h4>
    <div class="container">
        <p id="quiz-body" class="quiz-text quiz-text-padding">{{quiz.body}}</p>
    </div>
    {{!-- If this is my post I can delete it --}}
    {{#if currentUser}}
    <button id="delete-btn" class="bg-rose-200 hover:bg-rose-400 px-3 py-1 rounded-md mb-2 border-2 border-rose-400/50 shadow">Delete</button>
    {{/if}}
</div>

{{!-- Handle the Questions --}}
{{#each quiz.questions as |question|}}

{{!-- Displays answer options for each question --}}
<div class="text-center question">
<h2 class="text-center text-xl py-5">{{question.question_content}}</h2>
<button id="answer_a" class="w-1/2 rounded-md border-2 border-slate-400 bg-slate-100 hover:bg-slate-300 mb-2 choice shadow" data-correct={{question.answer_correct}}>{{question.answer_a}}</button>
<button id="answer_b" class="w-1/2 rounded-md border-2 border-slate-400  bg-slate-100 hover:bg-slate-300 mb-2 choice shadow" data-correct={{question.answer_correct}}>{{question.answer_b}}</button>
<button id="answer_c" class="w-1/2 bg-slate-100 rounded-md border-2 border-slate-400 hover:bg-slate-300 mb-2 choice shadow" data-correct={{question.answer_correct}}>{{question.answer_c}}</button>
<button id="answer_d" class="w-1/2 bg-slate-100 rounded-md border-2 border-slate-400 hover:bg-slate-300 mb-2 choice shadow" data-correct={{question.answer_correct}}>{{question.answer_d}}</button>
</div>
{{/each}}
<br>

{{!-- Attaches quiz ID and user ID to score --}}
<input class="form-input" type="hidden" id="quiz-id" value={{quiz.id}}></input>
<input class="form-input" type="hidden" id="user-id" value={{quiz.user_id}}></input>

{{!-- Button to show corerct answers --}}
<p id="results" class="text-center mb-2"></p>
<button id="show_answers" class="bg-slate-100 border-2 border-slate-400 hover:bg-slate-300 px-3 py-1 rounded-md mb-2 shadow">Show Answers</button>

</div>

